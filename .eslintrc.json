{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "angular",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {

    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-restricted-syntax": 0,
        "no-prototype-builtins": 0,
        "no-continue": 0,
        "consistent-return": 0,
        "no-param-reassign": 0,
        "prefer-const": 0,
        "func-names": 0,
        "no-plusplus": 0,
        "no-mixed-operators": 0,
        "class-methods-use-this": 0,
        "no-use-before-define": 0
    }
}
